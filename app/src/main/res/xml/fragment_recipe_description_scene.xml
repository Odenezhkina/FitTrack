<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@+id/iv_picture"
                motion:framePosition="100"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/iv_picture"
                motion:framePosition="80"
                android:alpha="0.5" />
            <KeyAttribute
                motion:motionTarget="@+id/iv_picture2"
                motion:framePosition="80"
                android:alpha="0.5" />
        </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/iv_picture"
            motion:touchAnchorSide="bottom" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="250dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/iv_picture"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            motion:layout_constraintTop_toBottomOf="@+id/iv_picture"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/constraintLayout3" />
        <Constraint
            android:id="@+id/iv_picture2"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            motion:transitionEasing="cubic(0.6,0.34,0.8,0.8)" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:id="@+id/iv_picture" />
        <Constraint
            android:id="@+id/iv_picture2"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <Constraint
            android:id="@+id/iv_picture2"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </ConstraintSet>
</MotionScene>