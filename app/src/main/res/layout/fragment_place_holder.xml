<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listForTheDay.PlaceHolderFragment">

   <me.relex.circleindicator.CircleIndicator3
       android:background="@color/primary_light_greeny"
       android:id="@+id/fragments_indicator"
       android:layout_width="match_parent"
       android:layout_height="56dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />

   <androidx.viewpager2.widget.ViewPager2
       android:id="@+id/vp_dayList"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/fragments_indicator" />

</androidx.constraintlayout.widget.ConstraintLayout>